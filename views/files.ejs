<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/output.css' />
    <script src="https://kit.fontawesome.com/f8991e1757.js" crossorigin="anonymous"></script>
</head>

<body class="bg-gray-100 max-w-screen-xl">
    <% include components/navbar.ejs %>

        <main class="ml-[16rem] h-screen w-full py-8">
            <form action="/files" method="POST" enctype="multipart/form-data" class="mb-8">
                <div class="flex items-center space-x-4">
                    <input type="file" name="foto" class="border rounded-lg py-2 px-4">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg">Upload
                        File</button>
                </div>
            </form>

            <h1 class="text-2xl font-bold mb-4">Files</h1>
            <div class="overflow-x-auto">
                <table class="table-auto w-full">
                    <thead>
                        <tr class="bg-gray-200">
                            <th class="px-4 py-2">Thumbnail</th>
                            <th class="px-4 py-2">File Name</th>
                            <th class="px-4 py-2">File Type</th>
                            <th class="px-4 py-2">Size</th>
                            <th class="px-4 py-2">Created At</th>
                            <th class="px-4 py-2">Origin Date</th>
                            <th class="px-4 py-2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% files.forEach(file=> { %>
                            <tr class="border-b border-gray-200">
                                <td class="px-4 py-2"><img src="/uploads/<%= file.folder %>/thumbnails/<%= file.name %>"
                                        alt="Thumbnail" class="w-16 h-16 object-cover"></td>
                                <td class="px-4 py-2">
                                    <%= file.name %>
                                </td>
                                <td class="px-4 py-2">
                                    <%= file.fileType %>
                                </td>
                                <td class="px-4 py-2">
                                    <%= file.size %> bytes
                                </td>
                                <td class="px-4 py-2">
                                    <%= file.createdAt %>
                                </td>
                                <td class="px-4 py-2">
                                    <%= file.originDate %>
                                </td>
                                <td class="px-4 py-2">
                                    <a href="/uploads/<%= file.folder %>/<%= file.name %>" download
                                        class="text-blue-500 hover:text-blue-600 mr-2"><i
                                            class="fas fa-download"></i></a>
                                    <button onclick="deleteFile('<%= file._id %>')"
                                        class="text-red-500 hover:text-red-600"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </main>

        <script>
            function deleteFile(fileId) {
                if (confirm("Are you sure you want to delete this file?")) {

                    fetch(`/files/${fileId}`, {
                        method: 'DELETE'
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                window.location.reload();
                            } else {
                                alert(data.message);
                            }
                        })
                        .catch(error => {
                            console.error(error);
                        });
                }
            }
        </script>
</body>

</html>